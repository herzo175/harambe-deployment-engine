apiVersion: serving.knative.dev/v1alpha1
kind: Service
metadata:
  name: harambe-deployment-engine-runner
  namespace: default
spec:
  template:
    spec:
      containers:
      - name: runner
        image: {{IMAGE}}
        ports:
          - name: h2c
            containerPort: 8080
        env:
        - name: IN_CLUSTER
          value: "true"
      # serviceAccountName: TODO: use non-default serviceaccount with admin creds